<div class="page-header">
  <h1>Todos los estados</h1>
</div>
<br>

<%= link_to "Crear un nuevo post", new_status_path, class: "btn btn-success"%>
<br>

<%@statuses.each do |status|%>
  <div class="status">
    <strong><%=status.nombre%></strong>
    <p><%=status.contenido%></p>
    <div>
      <%=link_to time_ago_in_words(status.created_at), status%>
      <span class="admin">
        | <%=link_to "Editar", edit_status_path(status)%> |
        <%=link_to "Borrar", status, method: :delete, data: {confirm: "¿Estás seguro que quieres borrar este estado?"}%>
      </span>
    </div>
  </div>
  <br>
<%end%>

<br>
<%=link_to "Nuevo Estado", new_status_path%>